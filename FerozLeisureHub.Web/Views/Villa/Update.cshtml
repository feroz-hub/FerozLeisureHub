@model FerozLeisureHub.Domain.Entities.Villa

<div class="container mt-4">
    <div class="card border-0">
        <div class="card-header bg-success bg-gradient">
            <div class="row">
                <div class="col-10 text-center">
                    <h2 class="text-white py-2">Update Villa</h2>
                </div>
                <div class="col-2 text-end">
                    <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
                <form method="post" asp-controller="Villa" asp-action="Update" id="updateForm">
                <input type="hidden" asp-for="Id" />

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control border shadow" placeholder="Villa Name" />
                    <label asp-for="Name">Villa Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control border shadow" placeholder="Description" />
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Price" class="form-control border shadow" placeholder="Price" />
                    <label asp-for="Price">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Sqft" class="form-control border shadow" placeholder="Sqft" />
                    <label asp-for="Sqft">Sqft</label>
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Occupancy" class="form-control border shadow" placeholder="Occupancy" />
                    <label asp-for="Occupancy">Occupancy</label>
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ImageUrl" class="form-control border shadow" placeholder="Image URL" />
                    <label asp-for="ImageUrl">Image URL</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}